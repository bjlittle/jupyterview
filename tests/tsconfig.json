{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop":true,
    "noImplicitAny": false,
    "lib": ["es2015", "dom" ],
    "noEmitOnError": true,
    "strictNullChecks": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "outDir": "build",
    "skipLibCheck": true,
    "sourceMap": true,
    "jsx" : "react"
  },
  "include": [
    "src/*.ts",
    "../src/**/*.ts"
  ]
}
